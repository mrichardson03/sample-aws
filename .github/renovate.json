{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "every friday"
  ],
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Assign reviewer for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "reviewers": [
        "mrichardson03"
      ]
    },
    {
      "automerge": true,
      "description": "Group minor and patch updates into a single PR",
      "groupName": "dependencies",
      "managers": [
        "github-actions",
        "pre-commit",
        "terraform",
        "tflint-plugin",
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
